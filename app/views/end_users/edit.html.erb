<%= render 'end_header/login_header' %>

<div class="container">
 	<div class="row">
		<div class="col-xs-12">
			<h2>ユーザー情報編集</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-3">
			<%= form_with model: @user, local: true do |f| %>
				<%= f.label :last_name, "姓" %><br>
				<%= f.text_field :last_name %><br>
		</div>
		<div class="col-xs-3">
				<%= f.label :first_name, "名" %><br>
				<%= f.text_field :first_name %><br>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-3">
				<%= f.label :last_name_kana, "カナ(姓)" %><br>
				<%= f.text_field :last_name_kana %><br>
		</div>
		<div class="col-xs-3">
				<%= f.label :first_name_kana, "カナ(名)" %><br>
				<%= f.text_field :first_name_kana %><br>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
				<%= f.fields_for :addresses do |a| %>
      				<%= render "address_fields", f: a %>
      			<% end %>
      			<%= f.label :email, "メールアドレス" %><br>
      			<%= f.email_field :email %><br>
      			<%= f.label :current_password, "現在のパスワード" %><br>
      			<%= f.password_field :current_password %><br>
      			<%= f.label :password, "変更後のパスワード" %><br>
      			<%= f.password_field :password %><br>
      			<%= f.label :password_confirmation, "変更後のパスワード(再確認)" %><br>
      			<%= f.password_field :password_confirmation %><br>
      			<%= f.label :usually_payment, "よく使う支払い方法" %><br>
      			<%= f.select :usually_payment, EndUser.usually_payments.keys.to_a, {} %><br>
      			<%= f.submit "ユーザー情報を更新" %>
			<% end %>
		</div>
	</div>
</div>
