<% if end_user_signed_in? %>
  <%= render 'end_header/login_header' %>
<% else %>
  <%= render 'end_header/not_login_header' %>
<% end %>


<div class="t_body">
  <div class="t_head">ログイン画面</div>

  <% if session[:login_error] %>
    <h3 class="y_h3" style="color: red; text-align: center"> <%= session.delete(:error) %></h3>
    <% session.delete(:login_error) %>
    <% session.delete(:error) %>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, "メールアドレス", class: 't_log-in-title1' %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 't_log-in-form' %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード", class: 't_log-in-title2' %><br/>
      <%= f.password_field :password, autocomplete: "current-password", class: 't_log-in-form' %>
    </div>

    <div class="t_position">
      <%= f.submit "ログイン", class: "t_btn_btn-default2" %>
    </div>

  <% end %>
</div>