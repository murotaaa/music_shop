<%= render 'admin_header/header' %><br>
<div style="width: 900px; margin: 0 auto;">
<table class="table-bordered m_table">
  <thead>
    <tr>
      <th class="m_table-head" style="width: 45px">ID</th>
      <th class="m_table-head" style="width: 110px">注文日</th>
      <th class="m_table-head" style="width: 80px">状態</th>
      <th class="m_table-head" style="width: 315px">シングル/アルバム名</th>
      <th class="m_table-head" style="width: 260px">歌手名</th>
      <th class="m_table-head" style="width: 45px">枚数</th>
      <th class="m_table-head" style="width: 45px">詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_histories.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= p.shipping_status %></td>
        <td><%= p.item_name_history %></td>
        <td><%= p.artist_name_history %></td>
        <td><%= p.sale_number %></td>
        <td><%= link_to "", admin_purchase_history_path(p.id), class: "glyphicon glyphicon-arrow-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>