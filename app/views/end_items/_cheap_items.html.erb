<div id="cheap_items">
	<div class="col-xs-12">
		<h3 class="n_end_items_index_title_c"><%= (BigDecimal("1000") * BigDecimal(@tax_rate)).ceil %>円以下で購入可能!!</h3>
	</div>
	<div class="row n_relative">
		<div class="col-xs-1 n_left">
			<%= link_to_prev_page @cheap_items, fa_icon("angle-double-left 5x"), param_name: :"cheap_page", remote: :true %>
		</div>
		<div class="col-xs-10">
			<div class="row">
				<ul>
					<%= render partial: "contents_of_each", collection: @cheap_items, as: :item %>
				</ul>
			</div>
		</div>
		<div class="col-xs-1 n_right">
			<%= link_to_next_page @cheap_items, fa_icon("angle-double-right 5x"), param_name: :"cheap_page", remote: :true %>
		</div>
	</div>
</div>